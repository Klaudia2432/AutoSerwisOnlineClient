@{
    ViewData["Title"] = "Contact";
}

<div class="background-image">
</div>
<div class="book-service container-fluid text-center">
    <h3>Book a service today!</h3>
    <p>Need MOT? <br/>
        Are you concerned about <br/>
        your car condition? <br/>
        Don’t wait until your car will be broken!</p>
    <button id="book-service-btn">
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="BookService">
            <p>Book a service</p>
        </a>
    </button>
</div>

<h1 class="text-center px-5">@ViewData["Title"]</h1>

<h2 class="text-center p-5">Contact us using the contact form below and we will respond as soon as possible</h2>

<form action="POST" class="website-forms">
    <input type="text" id="first-name" class="form-input" placeholder="First name (required)" required="required">
    <input type="text" id="email" class="form-input" placeholder="Email address (required)" required="required">
    <input type="text" id="telephone" class="form-input" placeholder="Telephone number (required)" required="required">
    <textarea name="message" id="message-optional" class="message-optional-field" cols="20" rows="5" placeholder="Message (optional)"></textarea>
    <button class="book-service-btn-confirm">Submit</button>
</form>